extends layout

block content
  h2 filter
  h3 markdown
  :markdown
    Hi, this is **imooc** [link](http://imooc.com)
  h3 sass
  style
    :sass
      body {
        p {
          :hover {
            color: #333;
          }
        }
      }
  h3 coffee
  script
    :coffee-script
      console.log 'This is coffee!'

  include style
  include title.html
  
  h2 template inherit
  block desc
    p desc from index
  h2 mixin
  mixin lesson
    p imooc jade study
  +lesson
  mixin study(name, courses)
    p #{name}
    ul.courses
      each course in courses
        li= course
  +study('tom', ['jade', 'node'])
  h3 nested mixin
  mixin group(student)
    h4= student.name
    +study(student.name, student.courses)
  +group({name: 'tony', courses: ['jade', 'node']})

  h3 block
  mixin team(slogan)
    h4= slogan
    if block
      block
    else
      p no team
  +team('slogan')
    p Good job!
    // code block after mixin call will be inserted into the 'block' of mixin

  h3 attribute
  mixin attr(name)
    p(class!=attributes.class) #{name}
  +attr('attr')(class='magic')

  mixin attrs(name)
    p&attributes(attributes) #{name}
  +attrs('attrs')(class='magic2', id='attrid')

  h3 variable parameters
  mixin magic(name, ...items)
    ul(class='#{name}')
      each item in items
        li= item
  +magic('magic', 'node', 'jade', '...')

  h2 control flow
  h3 if else
  - var isImooc = true
  - var lessons = ['jade', 'node']
  if lessons
    if lessons.length > 2
      p more than 2: #{lessons.join(', ')}
    else if lessons.length > 1
      p more than 1: #{lessons.join(', ')}
    else
      p no lesson
  else
    p no lesson
  h3 unless
  unless !isImooc
    p #{lessons.length}
  h3 case
  - var name = 'jade'
  case name
    when 'java'
    when 'node'
      p Hi node!
    when 'jade'
      p Hi Jade
    default
      p Hi #{name}
  h3 while
  - var n = 0
  ul
    while n < 4
      li= n++

  h3 for
  - var imooc = {course: 'jade', level: 'high'}
  - for (var k in imooc)
    p= imooc[k]
  h3 each
  each value, key in imooc
    p #{key}: #{value}
  h3 iterate arrays
  - var courses = ['node', 'jade', 'express']
  each item in courses
    p= item
  h3 nested each
  - var sections = [{id: 1, items: ['a', 'b']}, {id: 2, items: ['c', 'd']}]
  dl
    each section in sections
      dt= section.id
      each item in section.items
        dd= item

  h2 safe text
  - var data = 'text'
  - var htmlData = '<script>alert(1);</script><span>script</span>;'
  p #{data}
  p #{htmlData}
  // p !{htmlData}
  p= htmlData
  // p!= htmlData

  p \#{htmlData}
  p \!{htmlData}

  style.
    body {color: #f60}
  script.
    var imoocCourse = 'jade';
  h2 document declaration
  h2 tag syntax
  section
    div
      ul
      p
  h2 element attributes
  #id.class1(class='class2')
    a(href='http://imooc.com', title='imooc jade study', data-uid='1000') link
  h2 comment
  h3 single-line
  // h1.title(id='title2', class='title2') imooc jade study
  h3 unbuffered comment
  //- a(href='http://imooc.com', title='imooc jade study', data-uid='1000') link
  h3 block comment
  //-
    input(name='course', type='text', value='jade')
    input(name='type', type='checkbox', checked)

  h3 long paragraph
  p
    | 1. aa
    strong 11
    | 2. bb
    span 22
    | 3. cc
  p.
    1. aa<strong>11</strong>
    2. bb
    <span>22</span>
    3. c
    4. dd
